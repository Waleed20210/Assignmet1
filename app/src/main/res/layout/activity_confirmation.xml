<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Confirmation">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30px"
        android:layout_marginTop="25dp"
        android:text="Order Confirmation"
        android:textAlignment="center"
        android:textSize="85px"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textvieww"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="38dp"
        android:textSize="60px"
        android:layout_marginLeft="30dp"
        android:text="Name:" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="38dp"
        android:textSize="60px"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/textvieww"
        android:text="" />

    <TextView
        android:id="@+id/textvieww1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textvieww"
        android:layout_marginTop="38dp"
        android:textSize="60px"
        android:layout_marginLeft="30dp"
        android:text="Address:" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textvieww"
        android:layout_marginTop="38dp"
        android:textSize="60px"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/textvieww"
        android:text="" />
    <TextView
        android:id="@+id/textvieww2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textvieww1"
        android:layout_marginTop="38dp"
        android:textSize="60px"
        android:layout_marginLeft="30dp"
        android:text="Phone:" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textvieww1"
        android:layout_marginTop="38dp"
        android:textSize="60px"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/textvieww"
        android:text="" />
    <TextView
        android:id="@+id/textvieww3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textvieww2"
        android:layout_marginTop="38dp"
        android:textSize="60px"
        android:layout_marginLeft="30dp"
        android:text="Email:" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textvieww2"
        android:layout_marginTop="38dp"
        android:textSize="60px"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/textvieww"
        android:text="" />
    <TextView
        android:id="@+id/textvieww4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textvieww3"
        android:layout_marginTop="38dp"
        android:textSize="60px"
        android:layout_marginLeft="30dp"
        android:text="Price:" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textvieww3"
        android:layout_marginTop="38dp"
        android:textSize="60px"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/textvieww"
        android:text="" />

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textvieww4"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="60dp"
        android:text="Go back" />

    <Button
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/back"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/textvieww4"
        android:text="Confirm" />
</RelativeLayout>